{
  "$schema": "https://typedoc-plugin-markdown.org/schema.json",
  "disableSources": true,
  "out": "./docs/api",
  "entryPoints": [
    "src/modules/main/types.ts",
    "src/modules/elements/types.ts",
    "src/modules/layers/types.ts",
    "src/modules/ui/types.ts",
    "src/modules/viewport/types.ts",
    "src/modules/controller.ts",
    "src/types.ts"
  ],
  // "entryModule": "src/client.ts",
  "sort": ["kind", "source-order"],
  "plugin": [
    "typedoc-plugin-zod",
    "typedoc-plugin-markdown",
    "typedoc-plugin-remark",
    "./customTheme.mjs"
  ],
  // "projectDocuments": ["docs/Getting Started.md"],
  "cleanOutputDir": true,
  "readme": "none",
  "indexFormat": "list",
  "parametersFormat": "table",
  "interfacePropertiesFormat": "list",
  "classPropertiesFormat": "list",
  "enumMembersFormat": "table",
  "typeDeclarationFormat": "list",
  "propertyMembersFormat": "table",

  "categoryOrder": ["Main", "*"],

  "hideBreadcrumbs": true,
  "hidePageHeader": true,
  "hidePageTitle": true,
  "hideGroupHeadings": true,

  "treatWarningsAsErrors": true,

  "tableColumnSettings": {
    "hideInherited": true,
    "hideDefaults": false
  },

  "remarkPlugins": [["remark-toc", { "maxDepth": 4 }]],

  "outputFileStrategy": "modules",
  "flattenOutputFiles": true,
  "theme": "customTheme"
}
