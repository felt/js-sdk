{
  "$schema": "https://typedoc-plugin-markdown.org/schema.json",
  "disableSources": true,
  "out": "./docs/api",
  "entryPoints": [
    // this is the entry point for the docs
    "src/modules/initializing/index.ts",

    // each module
    "src/modules/*/index.ts",

    "src/modules/controller.ts"
  ],
  "sort": ["kind", "source-order"],
  "plugin": [
    "typedoc-plugin-zod",
    "typedoc-plugin-markdown",
    "typedoc-plugin-remark",
    "./customTheme.mjs"
  ],
  "cleanOutputDir": true,
  "readme": "none",
  "indexFormat": "list",
  "parametersFormat": "table",
  "interfacePropertiesFormat": "list",
  "classPropertiesFormat": "list",
  "enumMembersFormat": "table",
  "typeDeclarationFormat": "list",
  "propertyMembersFormat": "table",

  "categoryOrder": ["Initializing", "*"],

  "hideBreadcrumbs": true,
  "hidePageHeader": true,
  "hidePageTitle": true,
  "hideGroupHeadings": true,

  "treatWarningsAsErrors": true,

  "tableColumnSettings": {
    "hideInherited": true,
    "hideDefaults": false
  },

  "remarkPlugins": [["remark-toc", { "maxDepth": 4 }]],

  "outputFileStrategy": "members",
  "flattenOutputFiles": false,
  "theme": "customTheme",
  "entryModule": "Initializing"
}
